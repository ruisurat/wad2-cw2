<html>
    {{>partials/head}}
    {{>partials/staffNav}}
    <body>
        <div class="container-xxl py-5 bg-dark hero-header mb-5">
                <div class="container text-center my-5 pt-5 pb-4">
                    <h1 class="display-3 text-white mb-3">Add Dish</h1>
                </div>
            </div>
        </div>
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6">
                        <div class="row g-3">
                            <form method="post" action="/editDish/{{dish._id}}">
                                <label for="unique_id" class="col-sm-2 col-formlabel">Unique ID</label>
                                <div class="col-sm-10">
                                    <input type="text" id="unique_id" name="unique_id" value="{{dish.id}}">
                                </div>
                                <label for="name" class="col-sm-2 col-formlabel">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" id="name" name="name" value="{{ dish.name }}">
                                </div>
                                <label for="description" class="col-sm-2 col-formlabel">Description</label>
                                <div class="col-sm-10">
                                    <input type="text" id="description" name="description" value="{{ dish.description }}">
                                </div>
                                <label for="ingredients">Ingredients</label>
                                <div class="col-sm-10">
                                    <textarea name="ingredients" >{{dish.ingredients}}</textarea>
                                </div>
                                <label for="allergy_info">Allergy Info</label>
                                <div class="col-sm-10">
                                    <textarea name="allergy_info">{{dish.allergyInfo}}</textarea>
                                </div>
                                <label for="price">Price (Â£)</label>
                                <div class="col-sm-10">
                                    <input type="text" type="text" id="price" name="price" value="{{dish.price}}">
                                </div>
                                <label for="type">Type</label>
                                <div class="col-sm-10">
                                    <select name="type">
                                        {{#dishTypes}}
                                        <option value="{{value}}"
                                        {{#selected}}
                                            selected=
                                        {{/selected}}>{{text}}</option>
                                        {{/dishTypes}}
                                    </select>
                                </div>
                                <label for="vegan">Vegan?</label>
                                <div class="col-sm-10">
                                    <input type="checkbox" name="vegan"
                                    {{#dish.vegan}}
                                        checked=
                                    {{/dish.vegan}}
                                    />
                                </div>
                                <label for="vegetarian">Vegetarian?</label>
                                <div class="col-sm-10">
                                    
                                    <input type="checkbox" name="vegetarian"
                                    {{#dish.vegetarian}}
                                        checked=
                                    {{/dish.vegetarian}}
                                    />
                                </div>
                                <label for="hidden">Hidden?</label>
                                <div class="col-sm-10">
                                    
                                    <input type="checkbox" name="hidden"
                                    {{#dish.hidden}}
                                        checked=
                                    {{/dish.hidden}}
                                    />
                                </div>
                                <br>
                                <input type="submit" value="Edit" class="btn btn-primary">
                            </form>
                            <form method="post" action="/deleteDish/{{dish._id}}">
                                <input type="submit" value="Delete" class="btn btn-primary">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>