<html>
    {{>partials/head}}
    {{>partials/staffNav}}
    <body>
        <div class="container-xxl py-5 bg-dark hero-header mb-5">
                <div class="container text-center my-5 pt-5 pb-4">
                    <h1 class="display-3 text-white mb-3">Add Dish</h1>
                </div>
            </div>
        </div>
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6">
                        <div class="row g-3">
                            <form method="post" action="/addDish">
                                <label for="unique_id" class="col-sm-2 col-formlabel">Unique ID</label>
                                <div class="col-sm-10">
                                    <input type="text" id="unique_id" name="unique_id" placeholder="ID">
                                </div>
                                <label for="name" class="col-sm-2 col-formlabel">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" id="name" name="name" placeholder="Name">
                                </div>
                                <label for="description" class="col-sm-2 col-formlabel">Description</label>
                                <div class="col-sm-10">
                                    <input type="text" id="description" name="description" placeholder="Description">
                                </div>
                                <label for="ingredients">Ingredients</label>
                                <div class="col-sm-10">
                                    <textarea name="ingredients"></textarea>
                                </div>
                                <label for="allergy_info">Allergy Info</label>
                                <div class="col-sm-10">
                                    <textarea name="allergy_info"></textarea>
                                </div>
                                <label for="price">Price (Â£)</label>
                                <div class="col-sm-10">
                                    <input type="text" type="text" id="price" name="price" placeholder="3.50">
                                </div>
                                <label for="type">Type</label>
                                <div class="col-sm-10">
                                    <select name="type">
                                        <option value="drink">Drink</option>
                                        <option value="starter">Starter</option>
                                        <option value="main">Main</option>
                                        <option value="alcohol">Alcohol</option>
                                    </select>
                                </div>
                                <label for="vegan">Vegan?</label>
                                <div class="col-sm-10">
                                    <input type="checkbox" name="vegan"/>
                                </div>
                                <label for="vegetarian">Vegetarian?</label>
                                <div class="col-sm-10">
                                    <input type="checkbox" name="vegetarian"/>
                                </div>
                                <label for="hidden">Hidden?</label>
                                <div class="col-sm-10">
                                    <input type="checkbox" name="hidden"/>
                                </div>
                                <br>
                                <input type="submit" value="Add" class="btn btn-primary">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    {{>partials/footer}}
</html>